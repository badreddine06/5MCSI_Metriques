<body>
  <div class="container">
    <h1>üìà Activit√© des Commits</h1>

    <div class="info-panel">
      <h3>√Ä propos</h3>
      <p>Ce graphique montre combien de commits ont √©t√© effectu√©s minute par minute sur le projet GitHub. Chaque barre correspond √† une minute donn√©e.</p>
    </div>

    <div id="loading" class="loading">Chargement des donn√©es...</div>
    <div id="chart_div"></div>
  </div>

  <script>
    google.charts.load('current', { packages: ['corechart'] });
    google.charts.setOnLoadCallback(fetchCommitData);

    function fetchCommitData() {
      fetch('/commits-data/')
        .then(res => res.json())
        .then(data => {
          document.getElementById('loading').style.display = 'none';
          drawChart(data);
        })
        .catch(error => {
          document.getElementById('loading').textContent = 'Erreur de chargement.';
          console.error('Erreur :', error);
        });
    }

    function drawChart(data) {
      const chartData = [['Minute', 'Commits']];
      data.results.forEach(entry => {
        chartData.push([entry.minute, entry.count]);
      });

      const dataTable = google.visualization.arrayToDataTable(chartData);

      const options = {
        backgroundColor: '#ffffff',
        colors: ['#4caf50'],
        title: 'Commits par Minute',
        titleTextStyle: {
          color: '#2c3e50',
          fontSize: 20,
          bold: true
        },
        hAxis: {
          title: 'Minute',
          textStyle: { color: '#444' },
          titleTextStyle: { color: '#444' },
          gridlines: { color: '#f0f0f0' }
        },
        vAxis: {
          title: 'Commits',
          textStyle: { color: '#444' },
          titleTextStyle: { color: '#444' },
          gridlines: { color: '#f0f0f0' }
        },
        chartArea: { width: '80%', height: '70%' },
        legend: { position: 'none' },
        bar: { groupWidth: '65%' },
        animation: {
          duration: 1000,
          startup: true,
          easing: 'out'
        }
      };

      const chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
      chart.draw(dataTable, options);

      window.addEventListener('resize', () => chart.draw(dataTable, options));
    }
  </script>
